{
  "name": "oml2-theia-extension",
  "version": "0.1.0",
  "description": "An extension for Theia connection language support for the Oml2 DSL",
  "author": "Project Theia",
  "license": "Apache-2.0",
  "keywords": [
    "theia-extension"
  ],
  "config": {
    "oml2_version": "0.1.0"
  },
 "dependencies": {
    "@theia/core": "next",
    "@theia/editor": "next",
    "@theia/filesystem": "next",
    "@theia/languages": "next",
    "@theia/monaco": "next",
    "@types/node": "^8.0.14"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn install:languageserver && yarn run build",
    "install:languageserver": "rimraf -rf ./build && mkdir build && yarn download:languageserver",
    "download:languageserver": "download https://github.com/open-caesar/oml2-language-server/releases/download/v$npm_package_config_oml2_version/oml2-language-server-$npm_package_config_oml2_version.jar --out build",
    "clean": "rimraf lib",
    "build": "tsc && yarn lint",
    "lint": "tslint -c ./tslint.json --project ./tsconfig.json",
    "watch": "tsc -w"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "tslint": "^5.5.0",
    "typescript": "2.9.1",
    "download-cli": "latest"
  },
  "files": [
    "lib",
    "src",
    "build",
    "data"
  ],
  "theiaExtensions": [
    {
      "frontend": "lib/frontend/language/frontend-extension",
      "backend": "lib/backend/backend-extension"
    }
  ]
}
