{
  "name": "@theia/theia-oml2-extension",
  "keywords": [
    "theia-extension"
  ],
  "version": "0.1.0",
  "oml2_version": "0.1.0",
  "files": [
    "lib",
    "src"
  ],
  "dependencies": {
    "@theia/core": "next",
    "@theia/languages": "next"
  },
  "devDependencies": {
    "rimraf": "latest",
    "download-cli": "latest",
    "typescript": "latest"
  },
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "copy-ls": "rimraf build && download https://github.com/open-caesar/oml2-language-server/releases/download/v$npm_package_oml2_version/oml2-language-server-$npm_package_oml2_version.jar --out build",
    "clean": "rimraf lib",
    "build": "tsc && yarn run copy-ls",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/frontend/frontend-extension",
      "backend": "lib/backend/backend-extension"
    }
  ]
}